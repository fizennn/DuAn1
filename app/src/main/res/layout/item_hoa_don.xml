<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:id="@+id/imgMonAn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/phobo"
            android:contentDescription="Hình ảnh món ăn" />

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTenMonAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 120.000 VND"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtPhuongThucThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán: Tiền mặt"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 120.000 VND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF4081" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
