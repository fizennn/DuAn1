<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/txvChao"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/splinesans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buổi sáng tốt lành"
                android:textColor="@color/baseColor"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>
            <TextView
                android:layout_marginHorizontal="16dp"

                android:fontFamily="@font/splinesans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn muốn đặt gì nào ?"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/imgSearch"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search"
                        android:contentDescription=""
                        app:tint="#757575" />

                    <TextView
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/spline_sans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Find for food or restaurant..."
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@null"
                        android:contentDescription=""
                        app:tint="#FF5722" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Featured Restaurants -->
            <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gợi Ý Của Nhà Hàng"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All>"
                    android:textColor="@color/baseColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview1"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                 />

            <!-- Popular Items -->
            <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Món Ăn Phổ Biến"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All>"
                    android:textColor="@color/baseColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnOpenCart"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="right|bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:padding="13dp"
            android:tint="#717171"
            android:src="@drawable/cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txvNoti"

        app:cardCornerRadius="50dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="105dp"
        android:layout_gravity="right|bottom"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:backgroundTint="#F44336">

        <TextView
            android:id="@+id/txvSoLuongIteam"
            android:layout_gravity="center"
            android:fontFamily="@font/splinesans_bold"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
</FrameLayout>
