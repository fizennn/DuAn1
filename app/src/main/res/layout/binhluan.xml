<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout

        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="35dp"
            android:layout_width="35dp"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/imgProfileComment"
                android:scaleType="centerCrop"
                android:src="@drawable/phobo"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txvNameComment"
            android:fontFamily="@font/splinesans_bold"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Luu Quang Huy" />


    </LinearLayout>

    <LinearLayout
        android:gravity="center|left"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/saorate1"
                android:layout_weight="1"
                android:src="@drawable/star_empty"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <ImageView
                android:id="@+id/saorate2"
                android:layout_weight="1"
                android:src="@drawable/star_empty"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <ImageView
                android:id="@+id/saorate3"
                android:layout_weight="1"
                android:src="@drawable/star_empty"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <ImageView
                android:id="@+id/saorate4"
                android:layout_weight="1"
                android:src="@drawable/star_empty"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <ImageView
                android:id="@+id/saorate5"
                android:layout_weight="1"
                android:src="@drawable/star_empty"
                android:layout_width="17dp"
                android:layout_height="17dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txvDateComment"
            android:layout_marginLeft="15dp"
            android:text="31/10/2005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/txvComment"
        android:layout_marginTop="10dp"
        android:text="Có nguồn gốc ở cố đô Huế – kinh đô thời xa xưa của Việt Nam. Về đặc điểm, bún bò Huế là món bún chan. Bún bò Huế có nước phần nước dùng ngọt, đậm đà. Bún bò Huế không chỉ đặc sắc ở phần nước dùng, sợi bún to tròn và không chỉ có bò mà còn có chân giò heo, mọc, tiết… "
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linerBinhLuan"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAnhComment"
                android:scaleType="centerCrop"
                android:src="@drawable/phobo"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>